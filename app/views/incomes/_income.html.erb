<tr id="income_<%= income.id %>">
    <td><%= income.date %></td>
    <td><%= income.price %></td>
    <td><%= link_to 'Edit', edit_income_category_income_path(@income_category, income) %></td>
    <td><%= link_to 'Destroy', income_category_income_path(@income_category, income), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'btn btn-warning' %></td>
</tr>


<%= form_for([@income_category, income], method: :patch, remote: true) do |f| %>
<div class="modal fade" id="thisupdate_income_<%= income.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit</h4>
      </div>
      <div class="modal-body">

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" id="myupdatebutton_<%= income.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag "Edit", class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>
<% end %>