<p id="notice"><%= notice %></p>

<h1>Listing Expenses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.price %></td>
        <td><%= link_to 'Edit', edit_expense_category_expense_path(@expense_category, expense) %></td>
        <td><%= link_to 'Destroy', expense_category_expense_path(@expense_category, expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_category_expense_path , class: 'btn btn-default' %>
<br>
<br>
<%= link_to 'Back', income_categories_path , class: 'btn btn-default'%>
